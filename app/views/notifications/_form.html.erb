<%= simple_form_for(@noti, :html => { :class => "form-horizontal" }) do |f| %>
  <%= render 'shared/error_messages', :target => @noti %>
  <fieldset>
    <legend><%= legend %></legend>
    <%= f.input :content, :as => :text, :label => "推送内容", :input_html => { :class => "span6", :rows => 8 } %>
    <%= f.input :badge, :label => "Badge" %>
    <%= f.input :sound, :label => "提示音" %>
    <%= f.input :is_debug, as: :boolean, :inline_label => "是否以开发者模式推送", :label => false %>
    <div class="form-actions">
      <%= f.submit "保存", :class => "btn btn-primary", 'data-disable-with' => "正在保存..." %>
      <a href="<%= notifications_path %>" class="btn">取消</a>
    </div>
  </fieldset>
<% end %>
